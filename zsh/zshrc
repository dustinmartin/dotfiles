# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="dustin"
plugins=(osx)
source $ZSH/oh-my-zsh.sh

# Include other files
source ~/.aliases

# Init fasd
eval "$(fasd --init auto)"

# Make sure Homebrew's packages before others
export PATH="/usr/local/bin:$PATH"

# Add Haskell binaries to the path
export PATH="/Library/Haskell/bin:$PATH"

# Add npm modules to the path
export PATH="/usr/local/lib/node_modules:$PATH"
export PATH="/usr/local/share/npm/bin:$PATH"

# Setup the path to the Android tools
export PATH="$HOME/Development Tools/adt-bundle-mac-x86_64-20130219/sdk/platform-tools):$PATH"
export PATH="$HOME/Development Tools/adt-bundle-mac-x86_64-20130219/sdk/tools:$PATH"

# Postgres.app
export PATH="/Applications/Postgres.app/Contents/MacOS/bin:$PATH"

# Go
export GOPATH="$HOME/Projects/Go"
export PATH="$GOPATH/bin:$PATH"
export PATH="$GOROOT/bin:$PATH"

# Setup node.js modules
export NODE_PATH="/usr/local/lib/node_modules:$NODE_PATH"

# Ruby Options
# export RUBYOPT=rubygems

# Setup NVM
[[ -s /Users/dustinmartin/.nvm/nvm.sh ]] && . /Users/dustinmartin/.nvm/nvm.sh  # This loads NVM

# Setup RVM
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
