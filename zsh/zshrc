# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="dustin"
plugins=(osx)
source $ZSH/oh-my-zsh.sh

# Include other files
source ~/.aliases

# Init fasd
eval "$(fasd --init auto)"

export WEB_PORT=8180

# Make sure Homebrew's packages before others
export PATH="/usr/local/bin:$PATH"

# Add Haskell binaries to the path
export PATH="/Library/Haskell/bin:$PATH"

# Add npm modules to the path
# export PATH="/usr/local/lib/node_modules:$PATH"
# export PATH="/usr/local/share/npm/bin:$PATH"
# export NODE_PATH="/usr/local/lib/node_modules:$NODE_PATH"
export PATH="$HOME/usr/local/bin:$PATH"

# Go
export PATH="$PATH:/usr/local/go/bin"
export GOPATH="$HOME/Projects/Go"
export PATH="$GOPATH/bin:$PATH"
export PATH="$GOROOT/bin:$PATH"

# Setup Siphon
export SP_HOST="getsiphon.com"
export SP_PORT="80"

# Ruby Options
# export RUBYOPT=rubygems

# Setup NVM
# [[ -s /Users/dustinmartin/.nvm/nvm.sh ]] && . /Users/dustinmartin/.nvm/nvm.sh  # This loads NVM

# Setup RVM
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting

# Base16 Shell
# BASE16_SHELL="$HOME/.config/base16-shell/base16-ocean.dark.sh"
# [[ -s $BASE16_SHELL ]] && source $BASE16_SHELL

