# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ~="cd ~" # `cd` is probably faster to type though

# Miscellaneous Helpers
alias e=$EDITOR
alias reload="source ~/.zshrc"

# List all files colorized in long format, including dot files
alias la="ls -Gla"

# List only directories
alias lsd='ls -l | grep "^d"'

# List files with details
alias ll="ls -Gl"

# Show colors for ls
alias ls="ls -G"

# Show all hidden files
alias showf="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder"

# Hide all hidden files
alias hidef="defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder"

# sudo ln -s "/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl" /usr/bin/subl
export EDITOR='subl -w'

# ColdFusion 9
alias cf9="/Applications/ColdFusion9/bin/coldfusion"

# ColdFusion 10
alias cf10="/Applications/ColdFusion10/cfusion/bin/coldfusion"

# git
alias g='git'
alias gs='git status -s'
alias gst='git status'
alias gpl='git pull'
alias gpu='git push'
alias gf='git fetch'
alias gm='git merge'
alias gc='git commit -v -m'
alias gca='git commit -v -a -m'
alias gco='git checkout'
alias gb='git branch -a'
alias glg='git log --stat'
alias glgg='git hist'
alias grb='git rebase'
alias gd='git diff --color-words'
alias ga='git add'


alias gaa='git add -u && git add . && git status'
alias gup='git fetch origin && git rebase origin/develop'
alias gir='git rebase -i origin/develop'

function current_branch() {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
  echo ${ref#refs/heads/}
}

gdone() {
	develop_branch=$(git config --get core.develop-branch)
	topic_branch=$(current_branch)

	echo "Merging changes from '$topic_branch' into '$develop_branch'"
	echo
	
	if( $develop_branch == '' ){
		echo "Develop branch is not set in config"
		echo "Use 'git config core.develop-branch master' to set"
		return
	}

	git fetch origin $develop_branch
	git rebase origin/$develop_branch
	git checkout $develop_branch
	git pull
	git merge $topic_branch
	git push origin $develop_branch
}