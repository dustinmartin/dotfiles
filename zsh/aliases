# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."

# Vim aliases
alias vi='nvim'
alias vim='nvim'

# Create a Github pull-request
alias pr='hub pull-request'

# List TODOs
alias todo='ag "TODO|FIXME"'

# Jump to a directory
alias j='fasd_cd -d'

# Tmux
alias tmux="TERM=screen-256color-bce tmux"

# Make psql point to pgcli
alias psql="pgcli"

# Fix rake to work with zsh
alias rake="noglob rake"

# Miscellaneous Helpers
alias reload="source ~/.zshrc"

# Set vim as the editor
export EDITOR='nvim'

# Make FZF ignore files on .gitignore by piping to Ag
export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'

# List all files colorized in long format, including dot files
alias la="ls -Gla"
alias ll="ls -Gla"

# Show colors for ls
alias ls="ls -G"

# Git
alias g='git'
alias gs='git status -sb'
alias gst='git status'
alias gpl='git pull'
alias gpu='git push'
alias gf='git fetch'
alias gm='git merge --no-ff'
alias gco='git checkout'
alias gb='git b'
alias grb='git rebase'
alias gd='git diff --word-diff'
alias ga='git add'
alias gl='git log --graph --stat --abbrev-commit --date=relative'
alias gpb='git pb'
alias gup='echo "\nGitty up!\n" && git up'
alias gamend='git amend'
alias gwip='git wip'

# Commit staged changed and provide some stats on the commit
alias gc='git commit -v -m'

# Stage all updated/added/deleted files and commit
alias gca='git add -u && git add . && git commit -v -m'

# Create a new branch
alias gcob='git checkout -b'

# Stage all updated/added/deleted files
alias gaa='git add -u && git add . && git status'

# Interactive git add
alias gap='git add -p && git status'
